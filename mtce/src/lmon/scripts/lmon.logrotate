/var/log/lmond.log
{
    create 0640 root root
    start 1
    size 10M
    rotate 20
    compress
    notifempty
    missingok
    postrotate
        systemctl reload syslog-ng > /dev/null 2>&1 || true
    endscript
    delaycompress
}
